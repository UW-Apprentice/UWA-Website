<div class="col-lg-12 text-center">
	<h2>Itinerary</h2>


		        	<div class="col-md-4">

        	<h3>Friday</h3>

          <% Itinerary.where(:day => 'friday').order(item_time: :asc).each do |i| %>
          <br>

          <h4><%= i.item %></h4>

          <!-- Get time from db format it right and remove leading zero -->
          <h5><%= Time.strptime(i.item_time.to_s(:time), "%H:%M").strftime("%l:%M%P") %>
          - <%= Time.strptime(i.item_time_end.to_s(:time), "%H:%M").strftime("%l:%M%P") %></h5>
          <% end %>
          </div>
