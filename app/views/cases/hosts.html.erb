<div class="container">
<h2 class="text-center">Conference Sponsors</h2>
<% Case.where(:case_sponsor => false).each do |s| %>

<div class="col-lg-12">
<div class="block-update-card">
	<div class="update-card-body">

<div class="col-md-4">

<%= image_tag(s.sponsor_logo, :class => 'img-responsive') %>
<span style="padding:1px"></span>

</div>

<div class="col-md-8">
<h4><%= s.sponsor %></h4>
<%= s.description %>
</div>
</div>
</div>
<hr>
<span style="padding:60px"></span>
</div>
<% end %>


